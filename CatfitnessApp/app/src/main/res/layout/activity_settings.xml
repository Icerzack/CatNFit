                android:editable="false"
                android:enabled="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText5"
                android:hint="***"
                android:inputType="number"
                android:layout_below="@+id/editText"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView5"
                android:text="1"
                android:layout_alignStart="@+id/editText16" />

            <TextView
                android:text="Задержка сигнала:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/editText16"
                android:layout_alignBottom="@+id/editText16"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Корм на дозу:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:layout_alignBaseline="@+id/editText5"
                android:layout_alignBottom="@+id/editText5"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="(1-5 г)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignStart="@+id/editText15" />

            <TextView
                android:text=" (30-250 г)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toEndOf="@+id/textView2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText"
                android:hint="***"
                android:inputType="number"
                android:layout_below="@+id/textView16"
                android:layout_alignParentEnd="true"
