                android:layout_toEndOf="@+id/textView29" />

            <TextView
                android:text="Настройки выдачи корма"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:background="@drawable/rounded_button"
                android:textAlignment="center"
                android:layout_below="@+id/button8"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="Изменить подключение"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                android:background="@drawable/forbutton"
                android:layout_below="@+id/editText15"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="?attr/actionModeSplitBackground" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText7"
                android:editable="false"
                android:focusable="false"
                android:hint="***"
                android:text="15:00"
                android:layout_below="@+id/editText6"
                android:layout_alignParentEnd="true"
                android:visibility="invisible" />

            <TextView
                android:text="Настройки таймеров кормления"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:background="@drawable/rounded_button"
                android:textAlignment="center"
                android:layout_below="@+id/editText16"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText16"
                android:hint="***"
                android:text="7"
                android:inputType="number"
                android:layout_below="@+id/editText5"
                android:layout_toEndOf="@+id/textView37" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText6"
                android:hint="***"
                android:editable="false"
                android:focusable="false"
                android:text="10:00"
                android:visibility="invisible"
                android:layout_below="@+id/textView6"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Утро:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="114dp"
                android:visibility="invisible"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true" />

            <Button
                android:text=" Добавить время "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timerButton"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="13dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/forbutton"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:text="Уведомления"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timerButton"
                android:id="@+id/checkBox"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/list" />

            <CheckBox
                android:text="Увед. заранне"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_below="@+id/checkBox"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/list" />

            <CheckBox
                android:text="Высылать mail на почту"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox2"
                android:id="@+id/checkBox3"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/list" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
