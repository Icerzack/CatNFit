                android:focusable="false"
                android:hint="***"
                android:layout_below="@+id/editText7"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/editText7"
                android:text="20:00"
                android:visibility="invisible" />

            <TextView
                android:text="Сервер:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/editText12"
                android:layout_alignBottom="@+id/editText12"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Пользователь:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/editText14"
                android:layout_alignBottom="@+id/editText14"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Пароль:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/editText15"
                android:layout_alignBottom="@+id/editText15"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText12"
                android:hint="***"
                android:layout_below="@+id/textView25"
                android:layout_alignParentEnd="true"
